[user]
	name = gph
	email = gpenghe@gmail.com
[core]
	excludesfile = /Users/gpenghe/.gitignore_global
	autocrlf = input
    whitespace = -blank-at-eol
	editor = vim
[color]
	ui = true
[alias]
    tree2 = log --graph --decorate --abbrev-commit --branches --tags --remotes --date=short --pretty=format:'%C(yellow)%h%Creset-%C(cyan)(%ai%x08%x08%x08%x08%x08%x08)%Creset%C(bold green)%d%Creset %s %Creset'
    ci = commit
    cia = commit -a
[push]
	default = matching
[receive]
    denyCurrentBranch = false
[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true
