#alias ls="ls --color=tty"

if [ $PLATFORM == 'MAC' ]; then
    alias ls="gls --color -G"
    alias la="gls -A"
    alias cp="gcp -i"
    alias ll="gls -l"
    alias find="gfind"
else
    alias ls="ls --color -G"
    alias la="ls -A"
    alias cp="cp -i"
    alias ll="ls -l"
fi

if [ $PLATFORM == 'WIN' ]; then
    alias r="/c/Program\ Files/Notepad++/notepad++.exe"
    alias iar="IarIdePm.exe"
    alias dospath='cygpath -d'
    alias m='mingw32-make.exe'
fi

if [ $PLATFORM == 'WIN' ]; then
    alias e="explorer"
elif [ $PLATFORM == 'MAC' ]; then
    alias e="open"
elif [ $PLATFORM == 'LINUX' ]; then
    if [ $HOST == 'MINIPC' ]; then
        alias e="nautilus"
    fi
fi

alias vi="vim"
alias vidiff='vi -c "set syn=diff"'
alias vd='vi -c "set syn=diff"'
alias rm="saferm.sh"
alias hv="hgtk log"
alias hs="hg status"
alias cal="cal -m"
alias ccs="cc_app"
alias cgrep="grep -n --color"

alias diff='colordiff -u'
alias s='screen'
alias more='less -R'

alias gx='git tree2'
alias gx8='git tree2 -8'
alias gx9='git tree2 -9'
alias gx20='git tree2 -20'
alias gx40='git tree2 -40'
alias gv='git log --oneline --graph --decorate --all'
alias gs='git status -s'
alias gc='git cia -m "mod"'

# Use current user's PATH
alias sudo='sudo env PATH=$PATH'
