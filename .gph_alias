#alias ls="ls --color=tty"

if [ $PLATFORM == 'MAC' ]; then
    alias ls="gls --color -G"
    alias la="gls -A"
    alias cp="gcp -i"
    alias ll="gls -l"
    alias find="gfind"
else
    alias ls="ls --color -G"
    alias la="ls -A"
    alias cp="cp -i"
    alias ll="ls -l"
fi

if [ $PLATFORM == 'WIN' ]; then
    alias r="/c/Program\ Files/Notepad++/notepad++.exe"
    alias iar="IarIdePm.exe"
    alias dospath='cygpath -d'
    alias m='mingw32-make.exe'
fi

if [ $PLATFORM == 'CYGWIN' ]; then
    alias e="explorer"
elif [ $PLATFORM == 'MAC' ]; then
    alias e="open"
elif [ $PLATFORM == 'LINUX' ]; then
    if [ $HOST == 'MINIPC' ]; then
        alias e="nautilus"
    fi
    if [ $HOST == 'UTRC' ]; then
        alias updatedb="updatedb --database-root ~ -o ~/.update.db --require-visibility 0"
        alias locate="locate --database ~/.update.db"
    fi
fi

alias vi="vim"
alias vidiff='vi -c "set syn=diff"'
alias vd='vi -c "set syn=diff"'
alias rm="saferm.sh"
alias cal="cal -m"
alias ccs="cc_app"
alias cgrep="grep -n --color"

alias diff='colordiff -u'
alias s='screen'
alias more='less -R'

