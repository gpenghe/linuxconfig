#!/usr/bin/env python

import sys
from math import *

if len(sys.argv) == 1:
    print "You need to supply at least argument."
    print "Examples:"
    print "     $ %s 8.2*4+3" % sys.argv[0]
    print "     $ %s 8.2*4 + 3" % sys.argv[0]
    print "     $ %s sin\(8\) + 3" % sys.argv[0]
    print "     $ %s 'sin(8) + 3'" % sys.argv[0]
    sys.exit(-1)

sys.argv.remove(sys.argv[0]) # remove the command part

args = ''.join(sys.argv)

print "%s = " % args

print "     %s" % eval(args)
